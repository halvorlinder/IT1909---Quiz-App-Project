<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/16" fx:controller="ui.controllers.LogInController"
      xmlns:fx="http://javafx.com/fxml/1" styleClass="bg">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="430.0" prefWidth="600.0">
            <children>
                <Label text="Velkommen til Quiz-appen" fx:id="welcome" styleClass="h1">
                </Label>
                <Label prefHeight="48.0" prefWidth="72.0" text="Logg inn" styleClass="h2">
                </Label>
                <GridPane alignment="CENTER" prefHeight="91.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Brukernavn:" styleClass="h3"/>
                        <Label layoutX="10.0" layoutY="17.0" text="Passord:" GridPane.rowIndex="1" styleClass="h3"/>
                        <TextField layoutX="310.0" layoutY="13.0" prefHeight="25.0" prefWidth="152.0"
                                   GridPane.columnIndex="1" fx:id="logInUserName"/>
                        <PasswordField prefHeight="25.0" prefWidth="151.0" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1" fx:id="logInPassword"/>
                    </children>
                </GridPane>
                <Button mnemonicParsing="false" text="Logg inn" onAction="#attemptLogIn" styleClass="blue-button"/>
                <Label prefHeight="48.0" prefWidth="178.0" text="Registrer ny bruker" styleClass="h2">
                </Label>
                <GridPane alignment="CENTER" prefHeight="91.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Brukernavn:" styleClass="h3"/>
                        <Label layoutX="10.0" layoutY="17.0" text="Passord:" GridPane.rowIndex="1" styleClass="h3"/>
                        <TextField layoutX="310.0" layoutY="13.0" prefHeight="25.0" prefWidth="152.0"
                                   GridPane.columnIndex="1" fx:id="registerUserName"/>
                        <PasswordField prefHeight="25.0" prefWidth="151.0" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1" fx:id="registerPassword"/>
                    </children>
                </GridPane>
                <Button layoutX="279.0" layoutY="205.0" mnemonicParsing="false" text="Registrer ny bruker "
                        onAction="#attemptRegister" styleClass="blue-button"/>
            </children>
        </VBox>
    </children>
</VBox>
